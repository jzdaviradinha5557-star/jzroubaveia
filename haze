-- Serviços do Roblox
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Criar a ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MensagemGui"
ScreenGui.Parent = PlayerGui

-- Criar o Frame central
local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 300, 0, 100) -- largura 300, altura 100
Frame.Position = UDim2.new(0.5, -150, 0.5, -50) -- centralizado
Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- preto
Frame.BackgroundTransparency = 0.5 -- leve transparência
Frame.Parent = ScreenGui

-- Criar o texto
local TextLabel = Instance.new("TextLabel")
TextLabel.Size = UDim2.new(1, 0, 1, 0)
TextLabel.Position = UDim2.new(0, 0, 0, 0)
TextLabel.BackgroundTransparency = 1 -- sem fundo
TextLabel.Text = "tenta não pobre compra o cheat"
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- branco
TextLabel.TextScaled = true -- ajustar automaticamente
TextLabel.Font = Enum.Font.ArialBold
TextLabel.Parent = Frame